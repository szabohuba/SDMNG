@model SDMNG.Models.Contact

@{
    ViewData["Title"] = "Delete Contact";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this contact?</strong>
</div>

<div class="form-group">
    <label asp-for="FullName" class="control-label">Full Name</label>
    <input asp-for="FullName" class="form-control" readonly />
</div>

<div class="form-group">
    <label asp-for="Email" class="control-label">Email</label>
    <input asp-for="Email" class="form-control" readonly />
</div>

<div class="form-group">
    <label asp-for="Street" class="control-label">Street</label>
    <input asp-for="Street" class="form-control" readonly />
</div>

<div class="form-group">
    <label asp-for="Zipcode" class="control-label">Zipcode</label>
    <input asp-for="Zipcode" class="form-control" readonly />
</div>
<p>


</p>

<form asp-action="DeleteConfirmed" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
