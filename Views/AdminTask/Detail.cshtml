@model SDMNG.Models.AdminTask

@{
    ViewData["Title"] = "Task Details";
}

<h2>@Model.Title</h2>

<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Created At:</strong> @Model.CreatedAt.ToShortDateString()</p>
<p><strong>Due Until:</strong> @Model.DueUntil.ToShortDateString()</p>
<p>
    <strong>Status:</strong>
    @if (Model.IsResolved)
    {
        <span class="text-success">Resolved</span>
    }
    else
    {
        <span class="text-danger">Unresolved</span>
    }
</p>

<a asp-action="Modify" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a>
<a asp-action="Index" class="btn btn-outline-secondary">Back</a>
