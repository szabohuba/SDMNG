@model SDMNG.Models.AdminTask

@{
    ViewData["Title"] = "Edit Task";
}

<h2>Edit Task</h2>

<form asp-action="Modify" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="DueUntil" class="form-label"></label>
        <input asp-for="DueUntil" class="form-control" type="date" />
    </div>
    <div class="form-check mb-3">
        <input asp-for="IsResolved" class="form-check-input" />
        <label asp-for="IsResolved" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>
