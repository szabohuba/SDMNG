@model IEnumerable<SDMNG.Models.Stop>
@{
    ViewData["Title"] = "Stops List";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.StopName)</th>
            <th>@Html.DisplayNameFor(model => model.Latitude)</th>
            <th>@Html.DisplayNameFor(model => model.Longitude)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stop in Model)
        {
            <tr>
                <td>@stop.StopName</td>
                <td>@stop.Latitude</td>
                <td>@stop.Longitude</td>
                <td>
                    <a href="@Url.Action("Modify", "Stops", new { id = stop.StopId })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Detail", "Stops", new { id = stop.StopId })" class="btn btn-info btn-sm">Details</a>
                    <a href="@Url.Action("Delete", "Stops", new { id = stop.StopId })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a href="@Url.Action("Create", "Stops")" class="btn btn-primary">Create New Stop</a>
</p>
