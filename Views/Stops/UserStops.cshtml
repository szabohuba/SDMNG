@model IEnumerable<SDMNG.Models.Stop>
@{
    ViewData["Title"] = "Our Stops List";
}

<h2>@ViewData["Title"]</h2>


<!-- TABLE SECTION -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.StopName)</th>
            <th>@Html.DisplayNameFor(model => model.Latitude)</th>
            <th>@Html.DisplayNameFor(model => model.Longitude)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stop in Model)
        {
            <tr>
                <td>@stop.StopName</td>
                <td>@stop.Latitude</td>
                <td>@stop.Longitude</td>
                <td>
                    <a href="@Url.Action("UserDetail", "Stops", new { id = stop.StopId })" class="btn btn-info btn-sm">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
