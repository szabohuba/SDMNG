@model SDMNG.Models.Attachment

<form asp-action="CreateContactAttachment" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="ContactId" />

    <div class="form-group">
        <label>Select file:</label>
        <input type="file" name="file" class="form-control" required />
    </div>
    <p>
        <!-- Optionally, display the contact name if available -->
        <strong>Contact:</strong> @ViewBag.ContactName
    </p>

    <button type="submit" class="btn btn-primary">Upload</button>
    <a asp-action="Detail" asp-controller="Contact" asp-route-id="@Model.ContactId" class="btn btn-secondary">
        Back to Contact Details
    </a>

</form>
