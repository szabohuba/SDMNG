@model IEnumerable<SDMNG.Models.Attachment>

@{
    ViewData["Title"] = "Attachment List";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FileName)</th>
            <th>@Html.DisplayNameFor(model => model.FileType)</th>
            <th>@Html.DisplayNameFor(model => model.UploadDate)</th>
            <th>@Html.DisplayNameFor(model => model.expirationDate)</th>
            <th>@Html.DisplayNameFor(model => model.Contact.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.Bus.BusNumber)</th>
            <th style="width: 260px">Actions</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var attachment in Model)
        {
            <tr>
                <td>@attachment.FileName</td>
                <td>@attachment.FileType</td>
                <td>@attachment.UploadDate.ToString("yyyy-MM-dd")</td>
                <td>@attachment.expirationDate.ToString("yyyy-MM-dd")</td>
                <td>@(attachment.Contact?.FullName ?? "N/A")</td>
                <td>@(attachment.Bus?.BusNumber ?? "N/A")</td>

                <td>
                    <div class="d-flex gap-2">
                        <a href="@Url.Action("Modify", "Attachment", new { id = attachment.Id })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Detail", "Attachment", new { id = attachment.Id })" class="btn btn-info btn-sm">Details</a>
                        <a href="@Url.Action("Delete", "Attachment", new { id = attachment.Id })" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>

