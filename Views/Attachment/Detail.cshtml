@model SDMNG.Models.Attachment

@{
    ViewData["Title"] = "Attachment Detail";
}

<h2>Attachment Detail</h2>

<form asp-action="Detail" method="post" enctype="multipart/form-data">
    <div class="row">
        <!-- First Column -->
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="FileName" class="control-label"></label>
                <input asp-for="FileName" class="form-control" readonly />
                <span asp-validation-for="FileName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FileType" class="control-label"></label>
                <input asp-for="FileType" class="form-control" readonly />
                <span asp-validation-for="FileType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UploadDate" class="control-label"></label>
                <input asp-for="UploadDate" class="form-control" type="datetime-local" readonly />
                <span asp-validation-for="UploadDate" class="text-danger"></span>
            </div>
        </div>

        <!-- Second Column -->
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="FilePath" class="control-label">Attachment File</label>
                <a href="@Url.Content(Model.FilePath)" target="_blank" class="btn btn-info">Download File</a>
            </div>

            <div class="form-group">
                <label class="control-label">Assigned Contact</label>
                <input value="@Model.Contact?.FullName" class="form-control" type="text" readonly />
            </div>

            <div class="form-group">
                <label class="control-label">Assigned Bus</label>
                <input value="@Model.Bus?.BusNumber" class="form-control" type="text" readonly />
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <a asp-action="Index" asp-controller="Attachment" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
