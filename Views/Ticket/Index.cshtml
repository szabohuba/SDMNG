@model IEnumerable<Ticket>
@{
    ViewData["Title"] = "Ticket List";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.TicketId)</th>
            <th>@Html.DisplayNameFor(model => model.PurchaseDate)</th>
            <th>@Html.DisplayNameFor(model => model.SeatNumber)</th>
            <th>@Html.DisplayNameFor(model => model.ContactId)</th>
            <th>@Html.DisplayNameFor(model => model.ScheduleId)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.TicketId</td>
                <td>@ticket.PurchaseDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@ticket.SeatNumber</td>
                <td>@ticket.ContactId</td>
                <td>@ticket.ScheduleId</td>
                <td>
                    <a href="@Url.Action("Modify", "Ticket", new { id = ticket.TicketId })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Detail", "Ticket", new { id = ticket.TicketId })" class="btn btn-info btn-sm">Details</a>
                    <a href="@Url.Action("Delete", "Ticket", new { id = ticket.TicketId })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a href="@Url.Action("Create", "Ticket")" class="btn btn-primary">Create New Ticket</a>
</p>
