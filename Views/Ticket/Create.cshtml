@model SDMNG.Models.Ticket

@{
    ViewData["Title"] = "Create Ticket";
}

<h2>@ViewData["Title"]</h2>

<div class="card shadow p-4">
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="PurchaseDate" class="form-label">Purchase Date</label>
            <input asp-for="PurchaseDate" type="datetime-local" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="SeatNumber" class="form-label">Seat Number</label>
            <input asp-for="SeatNumber" type="number" class="form-control" required />
        </div>

    


        <div class="mb-3">
            <label asp-for="ContactId" class="form-label">Contact ID</label>
            <input asp-for="ContactId" type="text" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="ScheduleId" class="form-label">Schedule</label>
            <select asp-for="ScheduleId" asp-items="ViewBag.Schedules" class="form-control" required>
                <option value="">Select a Schedule</option>
            </select>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Create Ticket</button>
        </div>
    </form>
</div>
