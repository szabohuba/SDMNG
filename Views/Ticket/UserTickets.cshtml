@model IEnumerable<SDMNG.Models.Ticket>
@{
    ViewData["Title"] = "My Ticket List";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().TicketId)</th>
            <th>@Html.DisplayNameFor(model => model.First().PurchaseDate)</th>
            <th>@Html.DisplayNameFor(model => model.First().SeatNumber)</th>
            <th>User</th>
            <th>Schedule</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.TicketId</td>
                <td>@ticket.PurchaseDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@ticket.SeatNumber</td>
                <td>@ticket.Contact?.UserName</td> 
                <td>@ticket.Schedule?.Name</td>     
                <td>
                    <a href="@Url.Action("Detail", "Ticket", new { id = ticket.TicketId })" class="btn btn-info btn-sm">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a href="@Url.Action("BuyTicket", "Ticket")" class="btn btn-primary">Buy Ticket</a>
</p>
