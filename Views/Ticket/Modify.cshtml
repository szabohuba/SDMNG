@model SDMNG.Models.Ticket

@{
    ViewData["Title"] = "Modify Ticket";
}

<h2>@ViewData["Title"]</h2>

<div class="card shadow p-4">
    <form asp-action="Modify" method="post">
        <input type="hidden" asp-for="TicketId" />

        <div class="mb-3">
            <label asp-for="PurchaseDate" class="form-label">Purchase Date</label>
            <input asp-for="PurchaseDate" type="datetime-local" class="form-control"  />
        </div>

        <div class="mb-3">
            <label asp-for="SeatNumber" class="form-label">Seat Number</label>
            <input asp-for="SeatNumber" type="text" class="form-control" />
            <span asp-validation-for="SeatNumber" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label asp-for="ContactId" class="form-label">Passenger</label>
            <select asp-for="ContactId" asp-items="ViewBag.Contacts" class="form-control" required>
                <option value="">-- Select Passenger --</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="ScheduleId" class="form-label">Schedule</label>
            <select asp-for="ScheduleId" asp-items="ViewBag.Schedules" class="form-control" required>
                <option value="">-- Select Schedule --</option>
            </select>
        </div>


        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form>
</div>
