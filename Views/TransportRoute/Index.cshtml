@model IEnumerable<SDMNG.Models.TransportRoute>

@{
    ViewData["Title"] = "Transport Routes";
}

<h2>Transport Routes</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Route</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Stops</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var route in Model)
        {
            <tr>
                <td>@route.TransportRoutesName</td>
                <td>@(route.RouteStop?.Count ?? 0)</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@route.TransportRoutesId" class="btn btn-info">Details</a>
                    <a asp-action="Modify" asp-route-id="@route.TransportRoutesId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@route.TransportRoutesId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
