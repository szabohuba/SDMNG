@model IEnumerable<Schedule>
@{
    ViewData["Title"] = "Schedule List";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.DepartureTime)</th>
            <th>@Html.DisplayNameFor(model => model.ArrivalTime)</th>
            <th>@Html.DisplayNameFor(model => model.Bus)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var schedule in Model)
        {
            <tr>
                <td>@schedule.DepartureTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@schedule.ArrivalTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@schedule.Bus?.BusNumber</td>
                <td>
                    <a href="@Url.Action("Modify", "Schedule", new { id = schedule.Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Detail", "Schedule", new { id = schedule.Id })" class="btn btn-info btn-sm">Details</a>
                    <a href="@Url.Action("Delete", "Schedule", new { id = schedule.Id })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a href="@Url.Action("Create", "Schedule")" class="btn btn-primary">Create New Schedule</a>
</p>

