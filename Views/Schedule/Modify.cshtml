@model SDMNG.Models.Schedule

@{
    ViewData["Title"] = "Modify Schedule Details";
}

<h2>@ViewData["Title"]</h2>

<div class="card shadow p-4">
    <form asp-action="Detail" method="post">
        <div class="mb-3">
            <label asp-for="DepartureTime" class="form-label">Departure Time</label>
            <input asp-for="DepartureTime" type="datetime-local" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="ArrivalTime" class="form-label">Arrival Time</label>
            <input asp-for="ArrivalTime" type="datetime-local" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="BusId" class="form-label">Bus</label>
            <select asp-for="BusId" asp-items="ViewBag.Buses" class="form-control" required>
                <option value="">Select a Bus</option>
            </select>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form>
</div>
