@model IEnumerable<SDMNG.Models.Schedule>

@{
    ViewData["Title"] = "Schedule List";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Route</th>
            <th>Bus Number</th>
            <th>Departure Time</th>
            <th>Arrival Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var schedule in Model)
        {
            <tr>
                <td>@schedule.Name</td>
                <td>@schedule.TransportRoute?.TransportRoutesName</td>
                <td>@schedule.Bus?.BusNumber</td>
                <td>@schedule.DepartureTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@schedule.ArrivalTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    
                    <a href="@Url.Action("DetailUser", "Schedule", new { id = schedule.Id })" class="btn btn-info btn-sm">Details</a>
                    
                </td>
            </tr>
        }
    </tbody>
</table>


