@model SDMNG.Models.Schedule

@{
    ViewData["Title"] = "Schedule Details";
}

<h2>@ViewData["Title"]</h2>

<div class="card shadow p-4">
    <div class="mb-3">
        <label class="form-label"><strong>Schedule Name:</strong></label>
        <p>@Model.Name</p>
    </div>

    <div class="mb-3">
        <label class="form-label"><strong>Route:</strong></label>
        <p>@Model.TransportRoute?.TransportRoutesName</p>
    </div>

    <div class="mb-3">
        <label class="form-label"><strong>Bus Number:</strong></label>
        <p>@Model.Bus?.BusNumber</p>
    </div>

    <div class="mb-3">
        <label class="form-label"><strong>Departure Time:</strong></label>
        <p>@Model.DepartureTime.ToString("yyyy-MM-dd HH:mm")</p>
    </div>

    <div class="mb-3">
        <label class="form-label"><strong>Arrival Time:</strong></label>
        <p>@Model.ArrivalTime.ToString("yyyy-MM-dd HH:mm")</p>
    </div>

    <div class="d-flex justify-content-between">
        <a href="@Url.Action("IndexUser", "Schedule")" class="btn btn-secondary">Back to List</a>
    </div>
</div>
