@model SDMNG.Models.Bus

@{
    ViewData["Title"] = "Modify Bus Details";
}

<h2>Modify Bus Details</h2>

<form asp-action="Modify" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="BusId" />

    <div class="form-group">
        <label asp-for="BusNumber" class="control-label"></label>
        <input asp-for="BusNumber" class="form-control" />
        <span asp-validation-for="BusNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Capacity" class="control-label"></label>
        <input asp-for="Capacity" type="number" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BusType" class="control-label"></label>
        <input asp-for="BusType" class="form-control" />
        <span asp-validation-for="BusType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Current Image</label><br />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Bus Image" width="200" class="mb-2" />
        }
        else
        {
            <p><em>No image uploaded.</em></p>
        }
    </div>

    <div class="form-group">
        <label class="control-label">Upload New Image</label>
        <input type="file" class="form-control" name="BusImage" />
    </div>

    <div class="form-group">
        <label asp-for="ContactId">Assigned Driver</label>
        <select asp-for="ContactId" asp-items="ViewBag.DriverList" class="form-control">
            <option value="">-- Select Driver --</option>
        </select>
        <span asp-validation-for="ContactId" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" asp-controller="Bus" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
