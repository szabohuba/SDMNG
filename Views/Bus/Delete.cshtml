@model SDMNG.Models.Bus

@{
    ViewData["Title"] = "Delete Bus";
}

<h2>Delete Bus</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this bus?</strong>
</div>

<div class="form-group">
    <label asp-for="BusNumber" class="control-label">Bus Number</label>
    <input asp-for="BusNumber" class="form-control" readonly />
</div>

<div class="form-group">
    <label asp-for="Capacity" class="control-label">Capacity</label>
    <input asp-for="Capacity" class="form-control" readonly />
</div>

<div class="form-group">
    <label asp-for="BusType" class="control-label">Bus Type</label>
    <input asp-for="BusType" class="form-control" readonly />
</div>

<div class="form-group">
    <label class="control-label">Assigned Driver</label>
    <input class="form-control" type="text" value="@ViewBag.DriverName" readonly />
</div>

<p>


</p>

<form asp-action="Delete" method="post">
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" asp-controller="Bus" class="btn btn-secondary">Cancel</a>
    </div>
</form>
