@model IEnumerable<Bus>
@{
    ViewData["Title"] = "Bus List";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.BusNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Capacity)</th>
            <th>@Html.DisplayNameFor(model => model.BusType)</th>
            <th>@Html.DisplayNameFor(model => model.ImageUrl)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bus in Model)
        {
            <tr>
                <td>@bus.BusNumber</td>
                <td>@bus.Capacity</td>
                <td>@bus.BusType</td>
                <td>
                    @if (!string.IsNullOrEmpty(bus.ImageUrl))
                    {
                        <img src="@bus.ImageUrl" alt="Bus Image" style="width:100px;height:auto;" />
                    }
                </td>
                
                <td>
                    <a href="@Url.Action("Modify", "Bus", new { id = bus.BusId })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Detail", "Bus", new { id = bus.BusId })" class="btn btn-info btn-sm">Details</a>
                    <a href="@Url.Action("Delete", "Bus", new { id = bus.BusId })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<p>
    <a href="@Url.Action("Create", "Bus")" class="btn btn-primary">Create New Bus</a>
</p>
