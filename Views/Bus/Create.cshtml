@model SDMNG.Models.Bus

@{
    ViewData["Title"] = "Create Bus";
}

<h2>Create Bus</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="BusNumber" class="control-label"></label>
        <input asp-for="BusNumber" class="form-control" required />
        <span asp-validation-for="BusNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Capacity" class="control-label"></label>
        <input asp-for="Capacity" class="form-control" type="number"  required/>
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BusType" class="control-label"></label>
        <input asp-for="BusType" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl" class="control-label">Bus Image</label>
        <input type="file" class="form-control" name="BusImage" required />
    </div>

   
    <div class="mb-3">
        <label asp-for="ContactId" class="form-label">Select Driver</label>
        <select asp-for="ContactId" class="form-control" asp-items="ViewBag.Drivers" required>
            <option value="">-- Select Driver --</option>
        </select>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" asp-controller="Bus" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <script>
        window.onload = function () {
            var errorMessage = '@TempData["ErrorMessage"]';
            if (errorMessage) {
                alert(errorMessage);
            }
        };
    </script>
}
