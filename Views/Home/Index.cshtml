
@{
    ViewData["Title"] = "Home";
}

<div class="container text-center py-5">
    <h1 class="display-4 text-primary">Welcome to SpeedDiesel</h1>
    <p class="lead">Fast and Reliable Bus Transport Service</p>
    <a href="#services" class="btn btn-primary mt-3">View Services</a>
</div>

<!-- Services Section -->
<div id="services" class="container py-4">
    <div class="row text-center">
        <div class="col-md-4">
            <div class="card p-3">
                <i class="bi bi-bus-front-fill text-primary" style="font-size: 2rem;"></i>
                <h5 class="mt-2">City Buses</h5>
                <p>Quick and convenient city transport.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-3">
                <i class="bi bi-map text-primary" style="font-size: 2rem;"></i>
                <h5 class="mt-2">Route Planner</h5>
                <p>Find the best routes for your journey.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-3">
                <i class="bi bi-ticket text-primary" style="font-size: 2rem;"></i>
                <h5 class="mt-2">Book Tickets</h5>
                <p>Easy online ticket booking.</p>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="text-center py-3 bg-light">
    <p>&copy; 2025 SpeedDiesel | All Rights Reserved</p>
</footer>
