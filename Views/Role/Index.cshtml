@model List<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewBag.Title = "Roles List";
}

<h2>Roles</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-sm btn-primary">Edit</a>
                    <form asp-action="DeleteRole" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@role.Id" />
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this role?');">
                            Delete
                        </button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateRole" class="btn btn-success">Create New Role</a>
